- model_class = Scholarship
.page-header
  %h1=t '.title', :default => model_class.model_name.human

%p
  %strong= model_class.human_attribute_name(:provider_id) + ':'
  %br
  = link_to @scholarship.provider.name, @scholarship.provider
%p
  %strong Tags / Lists
  %ul
    - @scholarship.tags.each do |t|
      %li= "#{t.tag_context.label} : #{t.label}"
%p
  %strong= model_class.human_attribute_name(:name) + ':'
  %br
  = @scholarship.name
%p
  %strong= model_class.human_attribute_name(:description) + ':'
  %br
  = @scholarship.description
%p
  %strong= model_class.human_attribute_name(:requirements) + ':'
  %br
  = @scholarship.requirements
%p
  %strong= model_class.human_attribute_name(:award_size) + ':'
  %br
  = @scholarship.award_size
%p
  %strong= model_class.human_attribute_name(:deadline_date) + ':'
  %br
  = @scholarship.deadline_date
%p
  %strong= model_class.human_attribute_name(:deadline_comment) + ':'
  %br
  = @scholarship.deadline_comment
%p
  %strong= model_class.human_attribute_name(:application_url) + ':'
  %br
  = @scholarship.application_url
%p
  %strong= model_class.human_attribute_name(:renewable) + ':'
  %br
  = @scholarship.renewable
%p
  %strong= model_class.human_attribute_name(:number_of_awards) + ':'
  %br
  = @scholarship.number_of_awards
%p
  %strong= model_class.human_attribute_name(:one_time) + ':'
  %br
  = @scholarship.one_time
%p
  %strong= model_class.human_attribute_name(:award_min) + ':'
  %br
  = @scholarship.award_min
%p
  %strong= model_class.human_attribute_name(:award_max) + ':'
  %br
  = @scholarship.award_max

.form-actions
  = link_to t('.back', :default => t("helpers.links.back")), scholarships_path, :class => 'btn'
  = link_to t('.edit', :default => t("helpers.links.edit")), edit_scholarship_path(@scholarship), :class => 'btn'
  = link_to t('.destroy', :default => t("helpers.links.destroy")), scholarship_path(@scholarship), :method => "delete", :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')), :class => 'btn btn-danger'

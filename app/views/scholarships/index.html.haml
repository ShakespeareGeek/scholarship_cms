- model_class = Scholarship
.page-header
  %h1=t '.title', :default => model_class.model_name.human.pluralize
%table.table.table-striped
  %thead
    %tr
      %th= model_class.human_attribute_name(:provider)
      %th= model_class.human_attribute_name(:name)
      %th= model_class.human_attribute_name(:application_url)
      %th=t '.actions', :default => t("helpers.actions")
  %tbody
    - @scholarships.each do |scholarship|
      %tr
        %td= link_to scholarship.provider.name, scholarship.provider
        %td= link_to scholarship.name, scholarship, :title=>scholarship.description
        %td= scholarship.application_url
        %td
          = link_to t('.destroy', :default => t("helpers.links.destroy")), scholarship_path(scholarship), :method => :delete, :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')), :class => 'btn btn-mini btn-danger'

= link_to t('.new', :default => t("helpers.links.new")), new_scholarship_path, :class => 'btn btn-primary'

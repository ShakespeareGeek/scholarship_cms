%h1 Listing suggestions

%table
  %tr
    %th Name
    %th Category
    %th Description
    %th Url
    %th Submitter email
    %th
    %th
    %th

  - @suggestions.each do |suggestion|
    %tr
      %td= suggestion.name
      %td= suggestion.category
      %td= suggestion.description
      %td= suggestion.url
      %td= suggestion.submitter_email
      %td= link_to 'Show', suggestion
      %td= link_to 'Edit', edit_suggestion_path(suggestion)
      %td= link_to 'Destroy', suggestion, :confirm => 'Are you sure?', :method => :delete

%br

= link_to 'New Suggestion', new_suggestion_path

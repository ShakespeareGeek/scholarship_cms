- model_class = ScholarshipProvider
.page-header
  %h1=t '.title', :default => "Scholarship Providers"
%table.table.table-striped
  %thead
    %tr
      %th= model_class.human_attribute_name(:name)
      %th= model_class.human_attribute_name(:url)
      %th= model_class.human_attribute_name(:description)
      %th Number of Scholarships
      %th=t '.actions', :default => t("helpers.actions")
  %tbody
    - @scholarship_providers.each do |scholarship_provider|
      %tr
        %td= link_to scholarship_provider.name, scholarship_provider
        %td= scholarship_provider.url
        %td= scholarship_provider.description
        %td= scholarship_provider.scholarships.count
        %td
          = link_to t('.edit', :default => t("helpers.links.edit")), edit_scholarship_provider_path(scholarship_provider), :class => 'btn btn-mini'
          = link_to t('.destroy', :default => t("helpers.links.destroy")), scholarship_provider_path(scholarship_provider), :method => :delete, :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')), :class => 'btn btn-mini btn-danger'

= link_to t('.new', :default => t("helpers.links.new")), new_scholarship_provider_path, :class => 'btn btn-primary'

- model_class = TagContext
.page-header
  %h1=t '.title', :default => model_class.model_name.human

%p
  %strong= model_class.human_attribute_name(:label) + ':'
  %br
  = @tag_context.label

.form-actions
  = link_to t('.back', :default => t("helpers.links.back")), tag_contexts_path, :class => 'btn'
  = link_to t('.edit', :default => t("helpers.links.edit")), edit_tag_context_path(@tag_context), :class => 'btn'
  = link_to t('.destroy', :default => t("helpers.links.destroy")), tag_context_path(@tag_context), :method => "delete", :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')), :class => 'btn btn-danger'

= form_for @tag, :html => { :class => 'form-horizontal' } do |f|
  .control-group
    = f.label :label, :class => 'control-label'
    .controls
      = f.text_field :label, :class => 'text_field'
  .control-group
    = f.label :tag_context_id, :class => 'control-label'
    .controls
      = f.number_field :tag_context_id, :class => 'number_field'
  .form-actions
    = f.submit nil, :class => 'btn btn-primary'
    = link_to t('.cancel', :default => t("helpers.links.cancel")), tags_path, :class => 'btn'
